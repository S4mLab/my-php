<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<link rel="shortcut icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
		<meta name="theme-color" content="#000000" />
		<title>PHP Sales System</title>
		<link rel="stylesheet" href="/style.css" />
	</head>

	<body>
		<div id="root">
			<div class="View menuview">
		<h1 class="Banner">All Sales</h1>
		<div class="Message">
			<table class="tableDisplay">
				<tr>
				<th>Sales ID</th>
				<th>Date</th>
				<th>Product</th>
				<th>Number Sold</th>
				<th></th>
				<th></th>
				<!-- <th>Total</th> -->
			</tr>
			<% for (let salesRecord of sales) {%>
			<tr>
				<td><%= salesRecord.Sale_ID		 %></td>
				<td><%= salesRecord.DateOfSale.toDateString() %></td>
				<td><%= salesRecord.product_ID %></td>
				<td><%= salesRecord.NumberSold %></td>
				<td><a class="NavButtons" href="/sales/edit/<%= salesRecord._id %> ">Edit</a></td>
				<td>
					<form method="POST" action="/sales/<%= salesRecord._id %>?_method=DELETE">
						<button>Delete</button>
					</form>
				</td>
			</tr>
			<% } %>
		</table>
		<div class="NavButtons tableNav">
			<a href="/sales/add">
				<div class="NavButtonLogin" style="left: 0">Add Sales</div>
			</a>
			<a href="/sales/menu">
				<div class="NavButtonLogin" style="left: 0">Back</div>
			</a>
			</div>
			</div>
		</div>
	</body>
</html>
